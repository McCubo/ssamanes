      </div>

      <!-- Sidebar Menu -->
      <ul class="sidebar-menu" data-widget="tree">
        <li class="header">Menu Principal</li>
        <!-- Optionally, you can add icons to the links -->
        <li class="{% block start_active %}{% endblock %}"><a href="#"><i class="fa fa-home"></i> <span>Inicio</span></a></li>
        <li class="{% block partner_active %}{% endblock %}"><a href="#"><i class="fa fa-users"></i> <span>Socias</span></a></li>
        <li class="{% block pay_active %}{% endblock %}"><a href="#"><i class="fa fa-money"></i> <span>Cuotas Mensuales</span></a></li>
        <li class="{% block benefit_active %}{% endblock %}"><a href="#"><i class="fa fa-asterisk"></i> <span>Registro de Beneficio</span></a></li>
        <li class="treeview {% block report_active %}{% endblock %}">
          <a href="#"><i class="fa fa-file-text-o"></i> <span>Reportes</span>
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
