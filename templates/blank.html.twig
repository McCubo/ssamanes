        <li {% block user_active %}{% endblock %}><a href="#"><i class="fa fa-soundcloud"></i> <span>Usuarios del sistema</span></a></li>
        {% if is_granted("ROLE_ADMIN") %}
        	<li class="{% block admin_active %}{% endblock %}"><a href="{{ path('admin_index') }}"><i class="fa fa-gears"></i> <span>Configurar Catalogos</span></a></li>
        {% endif %}
      </ul>
      <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
