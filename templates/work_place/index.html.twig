{% extends 'blank.html.twig' %}

{% block admin_active %}active{% endblock %}
{% block title %}Lista de Lugares de trabajo {% endblock %}
{% block pagetitle %}Lista de lugares de trabajo {% endblock %}
{% block pagesubtitle %}configuracion del sistema {% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Fecha de creacion</th>
                <th>Ultima Actualizacion</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for work_place in work_places %}
            <tr>
                <td>{{ work_place.id }}</td>
                <td>{{ work_place.name }}</td>
                <td>{{ work_place.status|record_status }}</td>
                <td>{{ work_place.createdAt ? work_place.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ work_place.updatedAt ? work_place.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('work_place_edit', {'id': work_place.id}) }}">
                    	<i class="fa fa-edit"></i></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br />
	 <a href="{{ path('work_place_new') }}">
    	<button class="btn btn-primary" type="button">
    		<i class="fa fa-plus"></i> Crear nuevo registro
    	</button>
    </a>
{% endblock %}